<h1>Editing: <%= @movie.title %></h1>

<%= link_to 'Cancel edit and go back to movie', @movie, :class => 'btn btn-primary'%>
<%= link_to 'Delete Movie', movie_path(@movie), method: :delete, class: 'btn btn-danger' %>

<div class="container">
    <form action="/movies" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <% Movie.columns.each do |column|%>
            <% if column.name.to_s == "id" || column.name.to_s == "created_at" || column.name.to_s == "updated_at" %>

            <% else%>
                <div class="container_campos">
                    <label for="<%= "movie_#{column.name}" %>"> <%= column.name.capitalize %>: </label>
                    <input type="text" id="<%= "movie_#{column.name}" %>" name= <%= "movie[:#{column.name}]"%>>
                </div>
            <%end%>
        <%end%>

        <div id="container_confirma">
            <input type="submit" value="Edit movie">
        </div>
    </form>
</div>
